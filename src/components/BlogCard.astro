---
interface Props {
    title?: string;
    excerpt?: string;
    category?: string;
    imageUrl?: string;
    link?: string;
}

const { title = "Título del Blog", excerpt = "Este es un extracto del blog que ofrece una breve descripción del contenido para atraer a los lectores.", category = "Categoría", imageUrl = "https://placehold.co/1080x1920", link = "#" } = Astro.props;
---

<article class="blog-card" data-aos="fade-up">
    <a href={link} class="link">
        <div class="bg">
            <img src={imageUrl} alt={title}>
        </div>
    
        <div class="content">
            <div class="badget">
                <span class="category">{category}</span>
            </div>
            <h3 class="title">{title}</h3>
            <p class="excerpt">{excerpt}</p>
        </div>
    </a>
</article>

<style>
    .blog-card {
        width: calc(25% - .5rem);
        height: 450px;
        background-color: var(--color-white);
        border-radius: var(--border-radius);
        border: 4px solid transparent;
        overflow: hidden;
        transition: var(--transition);

        position: relative;
        z-index: var(--base-layer);
    }

    .blog-card:hover {
        transform: translateY(-5px);
        border: 4px solid var(--color-primary);
    }

    .blog-card .link {
        width: 100%;
        height: 100%;
        text-decoration: none;
        display: inline-block;
    }

    .blog-card .link .bg {
        width: 100%;
        height: 100%;

        position: absolute;
        left: 0;
        top: 0;
        z-index: var(--bg-layer);
    }

    .blog-card .link .bg::after {
        content: '';
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg,rgba(76, 52, 34, 0) 0%, rgb(76, 52, 34, 1) 80%);
        opacity: .8;
        transition: var(--transition);

        position: absolute;
        left: 0;
        top: 0;
        z-index: var(--base-layer);
    }

    .blog-card:hover .link .bg::after {
        opacity: .9;
    }

    .blog-card .link .bg img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    .blog-card .link .content {
        width: 100%;
        height: 100%;

        display: flex;
        flex-direction: column;
        justify-content: flex-end;

        padding: 2rem 1rem;
    }

    .blog-card .link .badget .category {
        display: inline-block;
        background-color: var(--color-light);
        color: var(--color-primary);
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.25rem 0.5rem;
        border-radius: var(--border-radius);
        margin-bottom: 0.5rem;
        text-transform: uppercase;
    }

    .blog-card .title {
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
        color: var(--color-light);
        text-wrap: balance;
    }

    .blog-card .excerpt {
        font-size: .8rem;
        color: var(--color-light);
    }
</style>